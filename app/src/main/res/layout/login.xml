    <LinearLayout
        android:id="@+id/vista_password_back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Ingresa Tu Email y en breve estaremos enviando las instrucciones para restaurar Tu Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Email"
            android:id="@+id/email_send_recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

        <Button
            android:textColor="@color/theme_background"
            android:background="@drawable/style_button_base"
            android:text="Recuperar Password"
            android:id="@+id/send_recuperar_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <com.bestdreamstore.cosmetics.LIBS.HTMLTextView
            android:id="@+id/response_service"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <Button

            android:layout_marginTop="30dp"
            android:text="Regresar a Login"
            android:id="@+id/regresar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



