    <LinearLayout
        android:id="@+id/vista_login"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="Ingreso Con Email"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:hint="Email"
                            android:id="@+id/email_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"/>


                        <EditText
                            android:hint="Password"
                            android:id="@+id/password_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"/>


                        <Button
                            android:textColor="@color/theme_background"
                            android:background="@drawable/style_button_base"
                            android:text="Ingresar Ahora"
                            android:id="@+id/send_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <com.bestdreamstore.cosmetics.LIBS.HTMLTextView
                            android:id="@+id/response_login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>




                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">




                        <Button

                            android:text="Crear Cuenta"
                            android:id="@+id/crear_cuenta"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content" />



                        <Button
                            android:text="Olvide Password"
                            android:id="@+id/olvide_pass"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content" />




                    </LinearLayout>



            </LinearLayout>

