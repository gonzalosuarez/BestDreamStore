    <LinearLayout
        android:id="@+id/vista_crear_cuenta"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Crear Cuenta Nueva. Ingresa Tus Datos"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:hint="Email"
                android:id="@+id/email_nueva_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>


            <EditText
                android:hint="Nombre Completo"
                android:id="@+id/nombre_nueva_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:hint="Password"
                android:id="@+id/password_nueva_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>


            <Button
                android:textColor="@color/theme_background"
                android:background="@drawable/style_button_base"
                android:text="Registrar Ahora"
                android:id="@+id/send_nueva_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.bestdreamstore.cosmetics.LIBS.HTMLTextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/response_create_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="Regresar a Login"
                android:id="@+id/regresar_login_nueva_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>



    </LinearLayout>






