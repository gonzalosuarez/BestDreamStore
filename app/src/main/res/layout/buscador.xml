<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.design.widget.AppBarLayout
        android:background="#BCFF5722"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">




        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_buscador"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" >




            <LinearLayout
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <EditText
                        android:textColor="#ffffff"
                        android:layout_marginRight="2dp"
                        android:id="@+id/palabra_clave_edittext"
                        android:hint="Producto"
                        android:layout_weight="5.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />




                <!--
                <ImageView
                    android:id="@+id/buscador_icon"
                    android:src="@drawable/ic_action_action_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
-->


                <ImageView
                    android:id="@+id/voz_texto"
                    android:gravity="right"
                    android:src="@drawable/ic_baseline_keyboard_voice_24"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>








            </LinearLayout>



        </android.support.v7.widget.Toolbar>






    </android.support.design.widget.AppBarLayout>




    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <com.bestdreamstore.cosmetics.LIBS.HTMLTextView
            android:textColor="#FF5722"
            android:gravity="center"
            android:id="@+id/negative_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:gravity="center"/>



    </LinearLayout>








</android.support.design.widget.CoordinatorLayout>